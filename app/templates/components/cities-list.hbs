<div class="cities">
  <div>
    <button {{action 'toNow'}} style="position: fixed;">Now</button>
  </div>
  {{#each selected as |city|}}
    <div class="city">
      {{city-info city=city time=selectedTime}}
      <div class="hours-wrapper">
        {{#each hours as |hour|}}
          <div class="hour {{if (is-working source=hour.time offset=city.utc) 'working'}}" data-timestamp="{{hour.time}}" {{action 'hourClick' hour.time}}>{{moment-format (local-time source=hour.time offset=city.utc) 'h'}}</div>
        {{/each}}
      </div>
    </div>
  {{/each}}
</div>
